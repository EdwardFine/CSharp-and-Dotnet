@{
    ViewData["Title"] = "All Dishes";
}
@model List<Dish>
<div class="text-center">
    <h1 class="display-4">All Dishes</h1>
    <a href="/dishes/new"><button class="btn btn-primary mt-3">Add New Dish</button></a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Chef</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(Dish d in Model){
                    <tr>
                        <td><a href="/dishes/@d.DishId">@d.Name</a></td>
                        <td>@d.Chef</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
