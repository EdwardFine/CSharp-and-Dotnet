@{
    ViewData["Title"] = "All Chefs";
}
@model List<Chef>

<div class="text-center">
    <h1>Check Out Our Roster of Chefs</h1>
    <hr>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th># of Dishes</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(Chef c in Model){
                    <tr>
                        <td>@c.FirstName @c.LastName</td>
                        @{
                            int age = DateTime.Today.Year - c.Birthday.Year;
                            if (c.Birthday > DateTime.Now.AddYears(-age)) age--;
                        }
                        <td>@age</td>
                        <td>@c.AllDishes.Count</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
