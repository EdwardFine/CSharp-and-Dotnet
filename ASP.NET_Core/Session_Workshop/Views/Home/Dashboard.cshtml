@{
    ViewData["Title"] = "Dashboard";
}
<div class="d-flex justify-content-between mt-5">
    <h1>Welcome @Context.Session.GetString("UserName")</h1>
    <form asp-action="Logout" asp-controller="Home">
        <button class="btn btn-danger">Logout</button>
    </form>
</div>
<hr>
<div class="mt-5 text-center">
    <h1>@Context.Session.GetInt32("Count")</h1>
</div>
<div class="d-flex gap-2 justify-content-center">
    <form asp-action="Count" asp-controller="Home">
        <input type="hidden" name="Value" value="1">
        <button class="btn btn-warning">+1</button>
    </form>
    <form asp-action="Count" asp-controller="Home">
        <input type="hidden" name="Value" value="2">
        <button class="btn btn-primary">-1</button>
    </form>
</div>
<div class="d-flex gap-2 justify-content-center mt-1">
    <form asp-action="Count" asp-controller="Home">
        <input type="hidden" name="Value" value="3">
        <button class="btn btn-warning">x2</button>
    </form>
    <form asp-action="Count" asp-controller="Home">
        <input type="hidden" name="Value" value="4">
        <button class="btn btn-success">+ Random</button>
    </form>
</div>